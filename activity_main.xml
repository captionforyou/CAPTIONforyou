<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="119dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="42dp"
            app:srcCompat="@drawable/profileimage" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="50dp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="110dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:layout_toRightOf="@+id/money"
            app:srcCompat="@drawable/money" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/money"
            app:srcCompat="@drawable/point" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="190dp"
            android:background="#4682B4" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/requestCount"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/registerCount"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="228dp"
            android:layout_marginLeft="228dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="48dp"
            android:layout_height="40dp"

            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:text="평가"
            android:textColor="#005BAC"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp"
            android:text="완성도"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:text="Clarity"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="170dp"
            android:text="평균 시간"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="70dp"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="120dp"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="170dp"
            android:inputType="textPersonName"
            android:textSize="24sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_i_write"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:background="#005BAC"
            android:onClick="clickIRequest"
            android:text="내가 쓴 글"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="30dp"
            android:background="#005BAC"
            android:onClick="clickIWorked"
            android:text="작업한 글"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/button_working_on"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="30dp"
            android:background="#005BAC"
            android:onClick="clickWorking"

            android:text="작업 중인 글"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/goToNotice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="90dp"
            android:background="#005BAC"
            android:onClick="clickgoToNotice"
            android:text="임의알림"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="OnClick" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="409dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            app:backgroundTint="#005BAC"
            app:itemIconSize="30dp"
            app:itemIconTint="#FFFFFF"
            app:itemTextColor="#FFFFFF"
            app:menu="@menu/menu_bottom" />

    </RelativeLayout>


    <!--    선택해서 넘어가는건 not yet -->
</LinearLayout>
